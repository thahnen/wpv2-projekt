<Window x:Class="Graphsky.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Graphsky"
        mc:Ignorable="d"
        SizeChanged="onWindowResize"
        Title="MainWindow" Height="640" Width="800">
    <Grid>
        <Button x:Name="btnLoadGraph" Content="Load Graph" HorizontalAlignment="Left" Margin="25,25,0,0" VerticalAlignment="Top" Width="75" Click="loadGraphFromFile"/>
        <Button x:Name="btnCalcGraph" Content="Calculate Graph" HorizontalAlignment="Left" Margin="125,25,0,0" VerticalAlignment="Top" Width="100" Click="calculateGraphLayout" IsEnabled="False"/>
        <Button x:Name="btnSaveGraph" Content="Save Graph" HorizontalAlignment="Left" Margin="250,25,0,0" VerticalAlignment="Top" Width="75" Click="saveGraphToFile" IsEnabled="False"/>
        <Canvas x:Name="cvsWhiteboard" Margin="25,75,25,25" Background="Gray"/>
    </Grid>
</Window>
